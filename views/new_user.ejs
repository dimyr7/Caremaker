<!DOCTYPE html>
<html>
<head>

		<%- include('dependencies.ejs'); %>		
		<script language="javascript" type="text/javascript">
		$(document).ready(function(){
			$("#caretaker_form").css('display', 'none');
			$("#customer_form").css('display', 'none');
			$("#caretaker").on('click', function(e){
				$("#caretaker_form").css('display', 'inline');
				$("#customer_form").css('display', 'none');
			});
			$("#customer").on('click', function(e){
				$("#caretaker_form").css('display', 'none');
				$("#customer_form").css('display', 'inline');
			})
		});
		</script>
	</head>
